<h1>My Portfolio</h1>

<div class="search-area">
  <h3>Search Stocks</h3>
  <%= form_tag '#', method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 no-leaft-padding">
        <%= text_field_tag :stock, params[:stock], placeholder: 'Stock ticker symbol', autofocus: true, class: 'form-control form-control-lg'%>
      </div>
      <div class="col-sm-3 no-right-padding">
        <%= button_tag type: :submit, class: 'btn btn-success' do %>
           <%= image_tag 'favicon.ico' %>        
        <% end %>
      </div>
    </div>
  <% end %>
</div>
