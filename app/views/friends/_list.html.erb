<div class="row">
  <div class="col-9">
    <table class="table table-bordered table-hover">
      <thead>
        <tr>
          <th scope="col">Email</th>
          <th scope="col">First Name</th>
          <th scope="col">Last Name</th>
          <th scope="col">Action</th>
        </tr>
      </thead>
        <% @friends.each do |friend| %>
          <tr>
            <td><%= link_to "#{friend.email}", frinds_stock_path(frinds_id: friend.id) %></td>
            <td><%= friend.first_name %></td>
            <td><%= friend.last_name %></td>
            <td><%= button_to 'Stop following', friendship_path(friend), method: :delete, data: {confirm: 'Are you sure?'} %></td>
          </tr>
        <% end %>
      <tbody>
      </tbody>
    </table>
  </div>
</div>